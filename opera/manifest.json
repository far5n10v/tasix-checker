{
	"manifest_version": 2,
	"minimum_chrome_version": "23",
	"name": "__MSG_extName__",
	"version": "2.0",
	"description": "__MSG_extDesc__",
	"homepage_url": "http://farhodjon.uz/projects/tasix-checker/",
	"default_locale": "ru",
	"background": {
		"page": "background.html"
	},
	"browser_action": {
		"default_icon": {
      "19": "images/19-checking.png",
      "38": "images/38-checking.png"
    }
	},
	"permissions": [
		"tabs",
		"webRequest",
    "webRequestBlocking",
		"<all_urls>"
	],
	"icons": {
		"16": "images/16.png",
		"48": "images/48.png",
		"128": "images/128.png"
   }
}